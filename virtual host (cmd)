sudo apt update
sudo apt install nginx -y
sudo bash -c 'echo "<h1>Hello from My NGINX Server!</h1>" > /var/www/html/index.html'
sudo systemctl reload nginx
do Virtual Hosts / Server Blocks 
sudo mkdir -p /var/www/site1.local/html
sudo mkdir -p /var/www/site2.local/html
sudo chown -R $USER:$USER /var/www/site1.local/html
sudo chown -R $USER:$USER /var/www/site2.local/html
echo "<h1>Welcome to Site 1!</h1>" > /var/www/site1.local/html/index.html
echo "<h1>Welcome to Site 2!</h1>" > /var/www/site2.local/html/index.html
sudo nano /etc/nginx/sites-available/site1.local
          server {
    listen 80;
    server_name site1.local;

    root /var/www/site1.local/html;
    index index.html;

    location / {
        try_files $uri $uri/ =404;
    }
}
sudo nano /etc/nginx/sites-available/site2.local
        server {
    listen 80;
    server_name site2.local;

    root /var/www/site2.local/html;
    index index.html;

    location / {
        try_files $uri $uri/ =404;
    }
}
sudo ln -s /etc/nginx/sites-available/site1.local /etc/nginx/sites-enabled/
sudo ln -s /etc/nginx/sites-available/site2.local /etc/nginx/sites-enabled/



sudo nginx -t
sudo systemctl reload nginx
